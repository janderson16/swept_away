
  <div class="container">
    <div class="card">
          <%= form_tag :search, class: "text-center", method: :get do %>
        <h2>I want sweeping routes for:</h2>
        <h6>Please input <i>only</i> the street name (i.e. <i>Washington</i>)</h6>
        <div class="row">
          <div class="text-center center_div">
            <%= text_field_tag :q, nil, placeholder: "Street Name" %>
            <%= select_tag(:suffix, options_for_select([['St'],
                                                      ['Pl'],
                                                      ['Ave'],
                                                      ['Blvd'],
                                                      ['Rd'],
                                                      ['Cir'],
                                                      ['Ct'],
                                                      ['Dr'],
                                                      ['Ln'],
                                                      ['Pkwy'],
                                                      ['Park'],
                                                      ['Way'],
                                                      ['Pl']]))%>
          <%= submit_tag "search" %>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <%= link_to "See all routes in Boston", "/all_routes" %>
      </div>
    </div>
  </div>

  <!-- Core Scripts - Include with every page -->
 <script src="assets/plugins/jquery-1.10.2.js"></script>
 <script src="assets/plugins/bootstrap/bootstrap.min.js"></script>
 <script src="assets/plugins/metisMenu/jquery.metisMenu.js"></script>
